generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  ADMIN
  EMPLOYEE
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

model User {
  user_id Int @id @default(autoincrement())
  name String 
  email String @unique
  password String
  role Role @default(EMPLOYEE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  @@map("users")
  tasks Task[]
}

model Customer {
  customer_id Int @id @default(autoincrement())
  name String 
  email String @unique
  phone Int @unique
  company String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
  tasks Task[]
}

model Task {
  id Int @id @default(autoincrement())
  title String
  description String?
  status TaskStatus @default(PENDING)

  assignedToId Int
  assignedTo User @relation(fields: [assignedToId], references: [user_id])

  customerid Int
  customer Customer @relation(fields: [customerid], references: [customer_id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}